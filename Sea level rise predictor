import pandas as pd
import matplotlib.pyplot as plt
from scipy.stats import linregress as lin

def draw_plot():
    # Read data from file
    df = pd.read_csv('epa-sea-level.csv')

    # Create scatter plot
    fig , ax = plt.subplots(figsize = (18,12))
    ax.scatter(df['Year'],df['CSIRO Adjusted Sea Level'])

    # Create first line of best fit
    result = lin(df['Year'],df['CSIRO Adjusted Sea Level'])
    slope = result.slope 
    intercept = result.intercept
    x_pred = pd.Series(range(1880,2051))
    y_pred = slope * x_pred + intercept
    ax.plot(x_pred,y_pred,color = 'red')
    # Create second line of best fit
    df_recent = df[df['Year'] > 1999]
    second_result = lin(df_recent['Year'], df_recent['CSIRO Adjusted Sea Level'])
    second_slope = second_result.slope
    second_intercept = second_result.intercept
    s_x_pred = pd.Series(range(2000,2051))
    s_y_pred = second_slope * s_x_pred + second_intercept 
    ax.plot(s_x_pred,s_y_pred, color = 'blue')
    # Add labels and title
    ax.set_xlabel('Year') 
    ax.set_ylabel('Sea Level (inches)') 
    ax.set_title('Rise in Sea Level')
    
    # Save plot and return data for testing (DO NOT MODIFY)
    plt.savefig('sea_level_plot.png')
    return plt.gca()
